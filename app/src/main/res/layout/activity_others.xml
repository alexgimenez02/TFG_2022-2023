<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OthersActivity">

    <include
        android:id="@+id/include2"
        layout="@layout/base_layout"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"/>

    <Button
        android:id="@+id/Config"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:text="Configuration"
        app:layout_constraintTop_toTopOf="@+id/include2"
        app:cornerRadius="100dp"
        tools:layout_editor_absoluteX="149dp" />

    <Button
        android:id="@+id/Games"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="Games"
        app:layout_constraintTop_toBottomOf="@+id/Config"
        app:cornerRadius="100dp"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/Queries"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:text="Discover Information"
        app:layout_constraintTop_toBottomOf="@+id/Games"
        app:cornerRadius="100dp"
        tools:layout_editor_absoluteX="159dp" />

    <Button
        android:id="@+id/BugReport"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:text="Report problem"
        app:layout_constraintTop_toBottomOf="@+id/Queries"
        app:cornerRadius="100dp"
        tools:layout_editor_absoluteX="161dp" />

</LinearLayout>